@model IEnumerable<WebApplicationTest.Entities.Departamento>

@{
    ViewData["Title"] = "Lista";
}

<h1>Lista de Departamentos</h1>

<p>
    <a asp-action="Create">Crear Nuevo Departamento</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.DepartamentoId">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.DepartamentoId">Detalles</a> |
                <a asp-action="Delete" asp-route-id="@item.DepartamentoId">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
